generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     Role   @default(USER)
}

model Stuff {
  id        Int       @id @default(autoincrement())
  name      String
  quantity  Int
  condition Condition @default(good)
  owner     String
}

model Bird {
  id          Int    @id @default(autoincrement())
  imagepath   String
  name        String
  sciname     String
  description String
}

model Sighting {
  id          Int     @id @default(autoincrement())
  imagepath   String
  name        String
  sciname     String
  time        String
  userid      Int
  description String
  owner       String
  location    String?
}

model Comment {
  id        Int      @id @default(autoincrement())
  note      String
  owner     String
  createdAt DateTime @default(now())
}

enum Role {
  USER
  ADMIN
}

enum Condition {
  excellent
  good
  fair
  poor
}
